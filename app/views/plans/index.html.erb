<p id="notice"><%= notice %></p>

<h1>プラン</h1>

<table>
  <thead>
    <tr>
      <th>ユーザ</th>
      <th>タイプ</th>
      <th>ワード数</th>
      <th>締め切り</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @plans.each do |plan| %>
      <tr>
        <td><%= plan.user.name %></td>
        <td><%= plan.act %></td>
        <td><%= plan.how_many %></td>
        <td><%= plan.deadline %></td>
        <td><%= link_to 'Show', plan %></td>
        <td><%= link_to 'Edit', edit_plan_path(plan) %></td>
        <td><%= link_to 'Destroy', plan, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

